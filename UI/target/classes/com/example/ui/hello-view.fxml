               </ImageView>

               <TextField fx:id="cityTextField" promptText="Enter a city">
                  <font>
                     <Font size="30.0"/>
                  </font>
               </TextField>

               <!-- Search button with an image -->
               <Button fx:id="searchButton" onAction="#onSearchButtonClicked">
                  <graphic>
                     <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../images/search.png"/>
                        </image>
                     </ImageView>
                  </graphic>
               </Button>

               <!-- Label to display the logged-in user -->
               <Label fx:id="loginUserLabel" text="User"/>


            </HBox>
            <Label text="SUNDAY  7:00 AM">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <ImageView fitHeight="110.0" fitWidth="135.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/cloud.png" />
               </image>
            </ImageView>
            <Label text="60Â°F">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
            <HBox prefHeight="78.0" prefWidth="270.0" spacing="15.0">
               <children>
                  <VBox prefHeight="100.0" prefWidth="100.0">
                     <children>
                        <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="90.0">
                           <children>
                              <ImageView fitHeight="32.0" fitWidth="74.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/sunrise.png" />
                                 </image>
                              </ImageView>
                              <Label alignment="TOP_LEFT" text="SUNRISE" />
                              <Label text="7:22" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" prefHeight="37.0" prefWidth="90.0">
                     <children>
                        <ImageView fitHeight="32.0" fitWidth="74.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/wind.png" />
                           </image>
                        </ImageView>
                        <Label text="WIND" />
