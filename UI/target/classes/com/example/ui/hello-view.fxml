                        <ImageView fitHeight="32.0" fitWidth="74.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/humidity.png" />
                           </image>
                        </ImageView>
                        <Label text="HUMIDITY" />
